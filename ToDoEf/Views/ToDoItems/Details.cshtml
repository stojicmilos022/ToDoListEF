
@{
    Layout = null;
}
@model IEnumerable<ToDoEf.Models.ToDoItems>

<html>
<head>
    <title>Entity framework ToDo Home Page</title>
    <link href="~/css/stylesheet.css" rel="stylesheet" />
</head>
<body>
    <h1>List of ToDo items from Group :  @ViewBag.GroupName</h1>
    <br />
    <p
        <a asp-action="Create">Create New ToDo item</a>
    </p>

    <table>
        <tr>
            <th colspan="2"> Items from selected group :</th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Completed task</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=>item.Name)</td>
                <td>@Html.DisplayFor(modelItem=>item.Completed)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="ToDoItems" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </table>
</body>
</html>